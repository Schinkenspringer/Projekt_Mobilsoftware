<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:gravity="center_vertical">


        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/baseline_agriculture_24"
            app:tint="#757575" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_name"
            android:textSize="20sp"
            tools:textColor="#757575" />


    </LinearLayout>


    <TextView
        android:id="@+id/textnachricht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/hello_world"
        android:textSize="24sp" />
<!--    Der Mittige Text wird durch die Variable "textnachricht" definiert; dieser wird der String "hello_world" zugeornet-->

    <Button
        android:id="@+id/Button_weiter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/button_weiter"
        app:backgroundTint="#4CAF50" />

    <Button
        android:id="@+id/button_klick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/Button_weiter"
        android:layout_marginBottom="50dp"
        android:text="@string/button_klick"

        app:backgroundTint="#787878"
        />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3C3C3C"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:subtitle="AndroidHKA"
        app:subtitleTextColor="#FFFFFF" />

    <Button
        android:id="@+id/button_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/button_klick"
        android:layout_marginBottom="50dp"
        android:text="Map" />


</RelativeLayout>

